<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/white"
                android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="12dp">

        <TextView
            android:id="@+id/attendClassItem_tv_className"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:textColor="@color/black"
            android:paddingBottom="2dp"
            android:text="班级一"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/attendClassItem_tv_complete"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="top"
            android:paddingTop="5dp"
            android:textColor="@color/black"
            android:text="点名已完成"
            android:textSize="13sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/attendClassItem_tv_vacation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="0"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/attend_circle_vacation_bg"
                android:gravity="center"
                android:text="假"
                android:textColor="@color/white"
                android:textSize="13sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/attendClassItem_tv_absence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="0"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/attend_circle_absence_bg"
                android:gravity="center"

                android:text="未"
                android:textColor="@color/white"
                android:textSize="13sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/attendClassItem_tv_attend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="0"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/attend_circle_attend_bg"
                android:gravity="center"
                android:text="到"
                android:textColor="@color/white"
                android:textSize="13sp"/>
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/common_divider_line"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>