<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/libTitleBg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fragSchool_tv_all"
            style="@style/schoolTitleTv"
            android:text="全部"/>

        <TextView
            android:id="@+id/fragSchool_tv_news"
            style="@style/schoolTitleTv"
            android:text="新闻"/>

        <TextView
            android:id="@+id/fragSchool_tv_dynamic"
            style="@style/schoolTitleTv"
            android:text="动态"/>

        <TextView
            android:id="@+id/fragSchool_tv_cookbook"
            style="@style/schoolTitleTv"
            android:text="食谱"/>

        <TextView
            android:id="@+id/fragSchool_tv_event"
            style="@style/schoolTitleTv"
            android:text="活动"/>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/fragSchool_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>