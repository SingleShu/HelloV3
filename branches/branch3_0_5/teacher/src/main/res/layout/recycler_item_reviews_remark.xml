<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/itemReviewsReMark_ll_root"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/white"
                android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/itemReviewsReMark_civ_head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="12.5dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="17dp"
        android:src="@drawable/head_holder"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/itemReviewsReMark_rl_start"
        android:layout_toRightOf="@+id/itemReviewsReMark_civ_head"
        android:gravity="center|left"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/itemReviewsReMark_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="@color/black"
            android:text="xiaosdad"
            android:textSize="@dimen/title_size"/>

        <TextView
            android:id="@+id/itemReviewsReMark_tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/title_size"/>
    </LinearLayout>

    <View
        style="@style/common_divider_line"
        android:layout_alignParentBottom="true"/>


    <RelativeLayout
        android:id="@+id/itemReviewsReMark_rl_start"
        style="@style/lib_star_percent"
        android:layout_marginRight="12dp"
        android:background="@drawable/mark_star_percent"
        android:gravity="center"
        android:layout_alignTop="@+id/itemReviewsReMark_civ_head"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/itemReviewsReMark_tv_score"
            android:layout_width="12dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center|right"
            android:textColor="@color/white"
            android:text="15"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/includeStar_tv_score2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemReviewsReMark_tv_score"
            android:layout_toRightOf="@+id/itemReviewsReMark_tv_score"
            android:gravity="center|left"
            android:text="15"
            android:textColor="@color/white"
            android:textSize="10sp"/>

    </RelativeLayout>

</RelativeLayout>
