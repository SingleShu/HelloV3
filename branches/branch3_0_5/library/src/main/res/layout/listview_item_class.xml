<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:myview="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.hellobaby.library.widget.CheckBoxPlus
        android:id="@+id/listViewItem_cbp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/textview_height"
        android:layout_marginTop="1dp"
        android:background="@color/normal_textview"
        android:button="@null"
        android:drawableRight="@drawable/selector_title_right_tick"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/textview_start"
        android:paddingRight="@dimen/textview_start"
        android:textColor="@color/et_text_color"
        myview:right_height="@dimen/textview_icon_size"
        myview:right_width="20dp"/>
</LinearLayout>