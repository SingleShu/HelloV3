<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/customSelectedClasss_tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:text="取消"
                android:textColor="@color/black"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/customSelectedClasss_tv_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:text="确定"
                android:textColor="@color/black"
                android:textSize="15sp"/>
        </RelativeLayout>

        <View
            style="@style/libCommon_divider_line"/>
    </LinearLayout>

    <ListView
        android:id="@+id/customSelectedClasss_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
<View
    android:id="@+id/customSelectedClasss_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/textview_height"
    android:background="@color/transparent"/>
    <View
    android:id="@+id/customSelectedClasss_view2"
    android:layout_width="match_parent"
    android:layout_height="@dimen/textview_height"
    android:background="@color/transparent"/>
</LinearLayout>