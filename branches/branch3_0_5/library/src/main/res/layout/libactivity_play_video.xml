<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark">
    <VideoView
        android:id="@+id/libPlayVideo_videoView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />
    <ImageView
        android:id="@+id/libPlayVideo_tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:background="@color/transparent"
        android:paddingBottom="@dimen/title_bottom_top_padding"
        android:paddingLeft="@dimen/screen_content_lr_space"
        android:paddingRight="@dimen/screen_content_lr_space"
        android:paddingTop="@dimen/title_bottom_top_padding"
        android:src="@drawable/title_left_arrow_white"/>
    <ImageView
        android:id="@+id/libPlayVideo_tv_more"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_gravity="right"
        android:background="@color/transparent"
        android:paddingBottom="@dimen/title_bottom_top_padding"
        android:paddingLeft="@dimen/screen_content_lr_space"
        android:paddingRight="@dimen/screen_content_lr_space"
        android:paddingTop="@dimen/title_bottom_top_padding"
        android:src="@drawable/title_more_white"/>
</FrameLayout>

