<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activityad_tv_title"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activityed_tv_title"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/activityed_tv_time"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="1dp"
                android:background="@color/normal_textview"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="@color/et_text_color"
                android:textSize="@dimen/common_size"/>

            <TextView
                android:id="@+id/activityed_tv_address"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="1dp"
                android:background="@color/normal_textview"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="@color/et_text_color"
                android:textSize="@dimen/common_size"
                 />

            <TextView
                android:id="@+id/activityed_tv_fee"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="1dp"
                android:background="@color/normal_textview"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="@color/et_text_color"
                android:textSize="@dimen/common_size"/>

            <TextView
                android:id="@+id/activityed_tv_people"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="1dp"
                android:background="@color/normal_textview"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="@color/et_text_color"
                android:textSize="@dimen/common_size"/>

            <TextView
                android:id="@+id/activityed_tv_deadline"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="1dp"
                android:background="@color/normal_textview"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="@color/et_text_color"
                android:textSize="@dimen/common_size"/>

            <TextView
                android:id="@+id/activityed_tv_conp"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="1dp"
                android:background="@color/normal_textview"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="@color/et_text_color"
                android:textSize="@dimen/common_size"/>

            <TextView
                android:id="@+id/activityed_tv_static"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="15dp"
                android:background="@color/normal_textview"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="活动详情:"
                android:textColor="@color/et_text_color"
                android:visibility="gone"
                android:textSize="@dimen/common_size"/>

            <TextView
                android:id="@+id/activityed_tv_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/normal_textview"
                android:inputType="textMultiLine"
                android:minHeight="25dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="@color/et_text_color"
                android:textSize="@dimen/common_size"/>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/eventdetail_bt_cancel"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_bg_default"
        android:text="取消参加"
        android:textColor="@color/etHintColor"
        android:visibility="gone"/>
    <Button
        android:id="@+id/eventdetail_bt_join"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_bg_default"
        android:text="立即参加"
        android:textColor="@color/etHintColor"
        android:visibility="gone"
        />
</RelativeLayout>
