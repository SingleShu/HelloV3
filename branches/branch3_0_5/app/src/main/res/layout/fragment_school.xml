<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

<LinearLayout
    android:id="@+id/fragSchool_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/libTitleBg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fragSchool_tv_all"
            style="@style/schoolTitleTv"
            android:text="全部"/>

        <TextView
            android:id="@+id/fragSchool_tv_news"
            style="@style/schoolTitleTv"
            android:text="新闻"/>

        <TextView
            android:id="@+id/fragSchool_tv_dynamic"
            style="@style/schoolTitleTv"
            android:text="动态"/>

        <TextView
            android:id="@+id/fragSchool_tv_cookbook"
            style="@style/schoolTitleTv"
            android:text="食谱"/>

        <TextView
            android:id="@+id/fragSchool_tv_event"
            style="@style/schoolTitleTv"
            android:text="活动"/>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/fragSchool_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
    <LinearLayout
        android:id="@+id/fragSchool_ll_no"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
    <Button
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:id="@+id/NoSchool_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/btn_bg_default"
        android:textColor="@color/etHintColor"
        android:layout_gravity="center_vertical"
        android:text="关联你的幼儿园"
        />
        </LinearLayout>
</LinearLayout>