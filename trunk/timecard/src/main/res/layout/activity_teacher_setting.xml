<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_teacher_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    tools:context="com.hellobaby.timecard.ui.setting.TeacherSettingActivity">

    <LinearLayout
        android:id="@+id/all"
        android:layout_width="wrap_content"
        android:background="@drawable/card_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:text="上下班考勤时间设置"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_margin="20dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="上班考勤时间："/>
            <EditText
                android:id="@+id/edit_go_work_HH"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:maxLength="2"
                android:textColor="@color/black"
                android:paddingRight="15dp"
                android:inputType="number"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textSize="18sp"
                android:background="@drawable/bg_search_input"
                android:hint="小时"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text=":"/>
            <EditText
                android:id="@+id/edit_go_work_mm"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:maxLength="2"
                android:paddingRight="15dp"
                android:paddingBottom="5dp"
                android:inputType="number"
                android:textColor="@color/black"
                android:paddingTop="5dp"
                android:textSize="18sp"
                android:background="@drawable/bg_search_input"
                android:hint="分钟"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_margin="20dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text="下班考勤时间："/>
            <EditText
                android:id="@+id/edit_off_work_HH"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="2"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="5dp"
                android:textColor="@color/black"
                android:paddingTop="5dp"
                android:inputType="number"
                android:textSize="18sp"
                android:background="@drawable/bg_search_input"
                android:hint="小时"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/black"
                android:text=":"/>
            <EditText
                android:id="@+id/edit_off_work_mm"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:maxLength="2"
                android:paddingRight="15dp"
                android:paddingBottom="5dp"
                android:textColor="@color/black"
                android:inputType="number"
                android:paddingTop="5dp"
                android:textSize="18sp"
                android:background="@drawable/bg_search_input"
                android:hint="分钟"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_sure"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btn_bg_default"/>
    </LinearLayout>

    <TextView
        android:layout_below="@+id/all"
        android:id="@+id/ts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="提示：时间设置为24小时制(格式 9:00 17:00)。下班时间不能小于上班时间！"/>
    <ImageView
        android:layout_below="@+id/ts"
        android:layout_width="460dp"
        android:layout_height="83dp"
        android:layout_marginTop="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/main_log_hello_baby"
        android:id="@+id/imageView" />
</RelativeLayout>
