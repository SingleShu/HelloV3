<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/main_bg"
                android:fitsSystemWindows="true"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/tv_result2"
        android:layout_width="460dp"
        android:layout_height="82dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="53dp"
        android:src="@drawable/main_log_hello_baby"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:paddingTop="55dp">

        <RelativeLayout
            android:layout_width="351dp"
            android:layout_height="51dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/setting_login_et">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@drawable/login_user"/>

            <EditText
                android:id="@+id/settingLogin_et_userName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@null"
                android:gravity="center"
                android:hint="用户名"
                android:text="admin"
                android:textColor="@color/black"
                android:textColorHint="@color/white"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="351dp"
            android:layout_height="51dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/setting_login_et">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@drawable/login_pwd"/>

            <EditText
                android:id="@+id/settingLogin_et_pwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@null"
                android:gravity="center"
                android:hint="密码"
                android:inputType="numberPassword"
                android:textColor="@color/black"
                android:textColorHint="@color/white"/>
        </RelativeLayout>


        <Button
            android:id="@+id/settingLogin_btn_login"
            android:layout_width="384dp"
            android:layout_height="82dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/setting_login_btn"
            android:text="登入"
            android:textColor="@color/white"
            android:textSize="20sp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/settingLogin_iv_back"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="55dp"
        android:layout_marginRight="100dp"
        android:adjustViewBounds="true"
        android:src="@drawable/setting_login_back"/>

</RelativeLayout>