<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ppwMenu_ll_root"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/main_bg"
              android:fitsSystemWindows="true"
              android:orientation="horizontal">


    <LinearLayout
        android:id="@+id/ppwAgentSet_ll_song"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ppwAgentSet_tv_song"
            android:layout_width="255dp"
            android:layout_height="255dp"
            android:layout_gravity="center"
            android:layout_marginLeft="100dp"
            android:background="@drawable/song"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ppwAgentSet_ll_jie"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ppwAgentSet_tv_jie"
            android:layout_width="255dp"
            android:layout_height="255dp"
            android:layout_gravity="center"
            android:layout_marginRight="100dp"
            android:background="@drawable/jie"/>
    </LinearLayout>


</LinearLayout>