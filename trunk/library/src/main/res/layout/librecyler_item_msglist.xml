<?xml version="1.0" encoding="utf-8"?>

<com.hellobaby.library.widget.SwipeItemLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/libMsgList_rl_root_delete"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/item_msg_delete"
        android:paddingRight="14dp"
        android:paddingLeft="14dp"
        android:gravity="center"
        android:src="@drawable/delete_red"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/delete_radio_btn"
                android:layout_gravity="center_vertical"
                android:visibility="gone"
                android:layout_width="35dp"
                android:layout_marginLeft="6dp"
                android:layout_height="match_parent">
                <CheckBox
                    android:id="@+id/check_box_circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:button="@drawable/checkbox_style"
                    android:gravity="center"
                    />
            </RelativeLayout>



            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/libMsgList_civ_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                 />

            <TextView
                android:id="@+id/libMsgList_tv_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bg_circle"
                android:gravity="center"
                android:text="10/50"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/libMsgList_tv_person"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/title_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/libMsgList_tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="@dimen/common_size" />
                </LinearLayout>

                <TextView
                    android:id="@+id/libMsgList_tv_subject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/common_size" />

                <TextView
                    android:id="@+id/libMsgList_tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:paddingRight="5dp"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/common_size" />

            </LinearLayout>


        </LinearLayout>

        <View
            style="@style/libCommon_divider_line"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
</com.hellobaby.library.widget.SwipeItemLayout>

