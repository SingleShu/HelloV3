<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ppwQRCode_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CF000000">

    <ImageView
        android:id="@+id/ppwQRCode_iv_save"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/save_tolocal_icon"
        android:layout_below="@+id/ppwQRCode_iv"
        android:layout_alignLeft="@+id/ppwQRCode_iv"
        android:layout_alignStart="@+id/ppwQRCode_iv"
        android:layout_marginLeft="30dp"/>

    <ImageView
        android:id="@+id/ppwQRCode_iv_wechat"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/share_towechat"
        android:layout_below="@+id/ppwQRCode_iv"
        android:layout_alignRight="@+id/ppwQRCode_iv"
        android:layout_alignEnd="@+id/ppwQRCode_iv"
        android:layout_marginRight="30dp"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_alignParentBottom="true"
    android:background="@color/black"
    android:layout_height="42dp">
    <ImageView
        android:id="@+id/ppwQRCode_close"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/album_delete"
        android:layout_centerInParent="true"
        />
</RelativeLayout>
    <ImageView
        android:id="@+id/ppwQRCode_iv"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:padding="2dp"
        android:text="*此二维码仅申请日期当日有效"
        android:textColor="@color/white"
        android:layout_above="@+id/ppwQRCode_iv"
        android:textSize="@dimen/common_size" />
</RelativeLayout>