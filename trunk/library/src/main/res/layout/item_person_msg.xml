<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/item_info_show_fl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/news_image_big"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:visibility="visible"
                    android:scaleType="centerCrop"
                    android:src="@drawable/btn_bg_default"
                    android:layout_margin="10dp"/>
                <ImageView
                    android:id="@+id/item_info_video_play"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:padding="6dp"
                    android:visibility="gone"
                    android:layout_centerInParent="true"
                    android:src="@drawable/video_play"/>
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/ItemInfo_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="1dp"
                android:visibility="gone"/>
        </FrameLayout>

        <TextView
            android:id="@+id/person_news_title"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            android:text="获得校园歌曲奖金，笑哭了。"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/person_news_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            android:text="获得校园歌曲奖金，笑哭了。"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginTop="10dp"
            style="@style/libCommon_divider_line"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/item_person_ll"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <LinearLayout
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content">
            <CheckBox
                android:id="@+id/person_heart_like_checkbox"
                android:layout_width="18dp"
                android:layout_height="16dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/heart_style"
                android:button="@null"/>
            <TextView
                android:id="@+id/person_like_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginLeft="4.5dp"
                android:text="10"/>
            <ImageView
                android:id="@+id/person_commension_img"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:padding="4.5dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/commension"/>
            <TextView
                android:id="@+id/person_commension_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="10"/>
        </LinearLayout>

        <TextView
            android:id="@+id/person_info_date"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:textSize="12sp"
            android:textColor="@color/btnUnable"
            android:text="2017年5月25日 13:57"
            />
    </RelativeLayout>
</LinearLayout>