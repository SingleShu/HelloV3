<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:myview="http://schemas.android.com/apk/res-auto"
              android:id="@+id/eventlist_rl_root"
              android:layout_width="match_parent"
              android:layout_height="60dp"
              android:background="@color/white"
              android:divider="@color/libTitleBg"
              android:orientation="vertical"
              android:showDividers="end">

    <LinearLayout
        android:id="@+id/eventlist_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/libEventList_tv_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="迪士尼三日游"
                    android:textColor="@color/black"
                    android:textSize="@dimen/title_size"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/libEventList_tv_time1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5分钟前"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/common_size"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:id="@+id/libEventList_tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:text="活动地点:上海迪士尼三日游"
                android:textColor="@color/black"
                android:textSize="@dimen/common_size"/>
            <TextView
                android:id="@+id/libEventList_tv_time"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:text="活动时间:2016.12.01"
                android:textColor="@color/black"
                android:textSize="@dimen/common_size"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <View style="@style/libCommon_divider_line"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>