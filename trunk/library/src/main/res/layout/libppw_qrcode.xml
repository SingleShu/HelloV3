<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ppwQRCode_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/qrcode_bg">

        <LinearLayout
            android:id="@+id/ppwQRCode_user"
            android:layout_centerHorizontal="true"
            android:layout_width="200dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ppwQRCode_baby_head"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="3dp"
                    android:src="@drawable/head_holder"/>
                <TextView
                    android:id="@+id/ppwQRCode_baby_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="17sp"
                    android:textColor="@color/white"
                    android:text="小妮子"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:text="宝宝"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ppwQRCode_user_head"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="3dp"
                    android:src="@drawable/head_holder"/>
                <TextView
                    android:id="@+id/ppwQRCode_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="17sp"
                    android:textColor="@color/white"
                    android:text="大妮子"/>
                <TextView
                    android:id="@+id/ppwQRCode_user_relation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:text="妈妈"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/ppwQRCode_iv"
            android:layout_below="@+id/ppwQRCode_user"
            android:layout_centerHorizontal="true"
            android:layout_width="230dp"
            android:layout_height="230dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ppwQRCode_iv"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:textSize="13sp"
            android:layout_marginTop="24dp"
            android:text="扫一扫上面的二维码图案，添加关联/考勤打卡"/>

        <ImageView
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/hellobaby_card"/>
    </RelativeLayout>
</LinearLayout>