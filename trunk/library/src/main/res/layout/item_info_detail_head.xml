<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/item_info_detail_head_ll"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/info_detail_head_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/head_holder"/>
        <TextView
            android:id="@+id/info_detail_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:text="何大桑"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/info_detail_show_fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/info_detail_big_img"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:visibility="visible"
                android:src="@drawable/btn_bg_default"
                android:layout_margin="10dp"/>
            <ImageView
                android:id="@+id/info_detail_video_play"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="6dp"
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:src="@drawable/video_play"/>
            <WebView
                android:id="@+id/info_detail_webview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </WebView>
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/ItemInfo_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="1dp"
            android:visibility="gone"/>
    </FrameLayout>

    <TextView
        android:id="@+id/info_detail_title"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/black"
        android:text="获得校园歌曲奖金，笑哭了。"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/info_detail_head_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="获得校园奖学金，哭了都！"/>

    <View
        android:layout_marginTop="10dp"
        style="@style/libCommon_divider_line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <LinearLayout
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content">
            <CheckBox
                android:id="@+id/info_detail_like_checkbox"
                android:layout_width="18dp"
                android:layout_height="16dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/heart_style"
                android:button="@null"/>
            <TextView
                android:id="@+id/person_like_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginLeft="7dp"
                android:text="10"/>
            <ImageView
                android:id="@+id/info_detail_commension_img"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/commension"/>
            <TextView
                android:id="@+id/info_detail_commension_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"
                android:text="10"/>
        </LinearLayout>

        <TextView
            android:id="@+id/info_detail_date"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:textSize="12sp"
            android:textColor="@color/btnUnable"
            android:text="5月25日 13:57"
            />
    </RelativeLayout>
    <View
        style="@style/libCommon_divider_line"/>
</LinearLayout>