<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lib_bottom_LL"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_gravity="bottom"
    android:layout_alignParentBottom="true"
    android:background="#AA000000"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/lib_bottom_tv_time"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
        android:paddingLeft="@dimen/screen_content_lr_space"
        android:textColor="@android:color/white"
        android:textSize="@dimen/common_size"/>

    <TextView
        android:id="@+id/lib_bottom_tv_userName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        android:paddingRight="@dimen/screen_content_lr_space"
        android:textColor="@android:color/white"
        android:textSize="@dimen/common_size"/>
</LinearLayout>