<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <View
        android:id="@+id/itemReviewsReMarkAlter_view1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:id="@+id/itemReviewsReMarkAlter_tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/itemReviewsReMarkAlter_view1"
        android:layout_toRightOf="@+id/itemReviewsReMarkAlter_view1"
        android:text="姓名"
        android:textColor="@color/black"
        android:textSize="@dimen/title_size" />

    <LinearLayout
        android:id="@+id/itemReviewsReMarkAlter_ll_star"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center">


        <ImageView
            android:id="@+id/itemReviewsReMarkAlter_iv_oneStar"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:src="@drawable/selector_mark_star" />

        <ImageView
            android:id="@+id/itemReviewsReMarkAlter_iv_twoStar"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:src="@drawable/selector_mark_star" />

        <ImageView
            android:id="@+id/itemReviewsReMarkAlter_iv_threeStar"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:src="@drawable/selector_mark_star" />
    </LinearLayout>

    <View
        style="@style/libCommon_divider_line"
        android:layout_alignParentBottom="true" />


</RelativeLayout>