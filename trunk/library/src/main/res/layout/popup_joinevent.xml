<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/click_to_dismiss"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:id="@+id/popup_anima"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FF4d4d4d"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="2">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="17.5dp"
            android:layout_gravity="center">
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"
                android:text="宝宝"
                android:layout_marginBottom="3dp"
                android:textColor="@color/white"
                android:textSize="17.5sp"/>
            <ImageView
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:id="@+id/joinevent_bt_babydel"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/joinevent_del_unclick"
                />
            <TextView
                android:id="@+id/joinevent_tv_babycount"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/btn_bg_eventselect"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="16sp"/>

            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:id="@+id/joinevent_bt_babyadd"
                android:layout_marginRight="45dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/selector_joinevent_add"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="17.5dp"
            android:layout_width="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"
                android:text="家长"
                android:layout_marginBottom="3dp"
                android:textColor="@color/white"
                android:textSize="17.5sp"/>
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:id="@+id/joinevent_bt_parentdel"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/joinevent_del_unclick"
                />
            <TextView
                android:id="@+id/joinevent_tv_parentcount"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/btn_bg_eventselect"
                android:text="0"
                android:textColor="@color/white"
                android:enabled="false"
                android:textSize="16sp"/>
            <ImageView
                android:id="@+id/joinevent_bt_parentadd"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:layout_marginRight="45dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/selector_joinevent_add"
                />
        </LinearLayout>
    </LinearLayout>
            <TextView
                android:id="@+id/joinevent_tv_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="#FF333333"
                android:layout_weight="1"
                android:text="确定"
                android:textSize="17.5sp"
                android:textColor="@color/white"
                android:paddingTop="10dp"
                android:paddingRight="5dp"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                />

            <TextView
                android:id="@+id/joinevent_tv_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="#FF000000"
                android:layout_weight="1"
                android:text="取消"
                android:textSize="17.5sp"
                android:textColor="@color/white"
                android:paddingTop="10dp"
                android:paddingRight="5dp"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                />

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>