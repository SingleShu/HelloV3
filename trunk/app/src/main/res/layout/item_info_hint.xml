<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_info_hint_head_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/head_holder"/>

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/item_info_hint_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/contents_text"
                android:text="徐大明"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/item_info_hint_content_ts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="回复 " />
                <TextView
                    android:id="@+id/item_info_hint_content_toName"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text=""/>
                <TextView
                    android:id="@+id/item_info_hint_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textColor="@color/contents_text"
                    android:text="hahahahahhahaha"/>
            </LinearLayout>


            <TextView
                android:id="@+id/item_info_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="13:50"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_gravity="center_vertical"
            android:layout_width="50dp"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/item_info_hint_conImg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:src="@drawable/holder_color_8"/>
            <ImageView
                android:id="@+id/video_play_iv"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:src="@drawable/video_play"/>
        </RelativeLayout>

    </LinearLayout>

    <View style="@style/libCommon_divider_line"/>
</LinearLayout>