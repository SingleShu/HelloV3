<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/alertactivity_rl"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginLeft="20dp"
        android:id="@+id/content_photo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/msgunreadicon" />

    <TextView
        android:id="@+id/content_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/content_photo"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="@dimen/alert_margin"
        android:layout_marginTop="20dp"
        android:text="小班主任" />

    <TextView
        android:id="@+id/content_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="@dimen/alert_margin"
        android:layout_marginTop="20dp"
        android:text="5分钟前" />


    <TextView
        android:id="@+id/subject"
        android:layout_toRightOf="@+id/content_photo"
        android:layout_marginRight="@dimen/alert_margin"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:paddingRight="5dp"
        android:layout_marginLeft="15dp"
        android:maxLines="1"
        android:text="幼儿园环境建设的重要性幼儿园环境建设的重要性幼儿园环境建设的重要性"
        android:layout_below="@+id/content_person"
         />

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_toRightOf="@+id/content_photo"
        android:layout_height="20dp"
        android:paddingRight="5dp"
        android:layout_marginLeft="15dp"
        android:maxLines="1"
        android:text="testtesttesttesttesttesttesttesttesttesttesttesttesttest"
        android:layout_marginRight="@dimen/alert_margin"
        android:layout_below="@+id/subject"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
<ImageView
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/etUnFocusedBg"
    android:layout_alignParentBottom="true"/>
