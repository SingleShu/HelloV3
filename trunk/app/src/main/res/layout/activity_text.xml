<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/textBgColor"
                android:orientation="vertical">

    <ScrollView
        android:id="@+id/textactivity_sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/textBgColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/libTitle_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="9dp"
                android:lines="1"
                android:maxLength="13"
                android:text="标题"
                android:textColor="@color/black"
                android:textSize="@dimen/title_title_size"/>

            <TextView
                android:id="@+id/input_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/input_title_text_line"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:gravity="top"
                android:maxLength="140"
                android:paddingLeft="10dp"
                android:paddingRight="@dimen/textview_start"
                android:paddingStart="@dimen/screen_content_lr_space"
                android:textColor="@color/black"
                android:textColorHint="@color/textTvHintColor"
                android:textSize="18sp"/>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/libTitle_RL"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height">

        <ImageView
            android:id="@+id/libTitle_iv_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:paddingBottom="@dimen/title_bottom_top_padding"
            android:paddingLeft="@dimen/screen_content_lr_space"
            android:paddingRight="10dp"
            android:paddingTop="@dimen/title_bottom_top_padding"
            android:src="@drawable/title_left_arrow"/>

        <ImageView
            android:id="@+id/libTitle_iv_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="@dimen/title_bottom_top_padding"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="@dimen/title_bottom_top_padding"
            android:src="@drawable/title_more_black"/>
    </RelativeLayout>

    <include layout="@layout/lib_bottom_time_user"/>
</RelativeLayout>



