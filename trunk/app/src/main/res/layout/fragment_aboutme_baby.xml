<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:myview="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/normal_background">

    <com.hellobaby.library.widget.TextViewPlus
        android:id="@+id/aboutmeBaby_tv_cancelCareBaby"
        android:layout_width="match_parent"
        android:layout_height="@dimen/textview_height"
        android:layout_alignParentBottom="true"
        android:background="@color/normal_textview"
        android:drawableRight="@drawable/et_deleteicon"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/textview_start"
        android:paddingRight="@dimen/textview_start"
        android:text="取消该关注宝宝"
        android:textColor="@color/warming_red"
        android:textSize="@dimen/textview_text_size"
        android:layout_marginBottom="@dimen/me_bottom_margin_bottom"
        myview:right_height="17dp"
        myview:right_width="@dimen/textview_icon_size"/>

    <com.hellobaby.library.widget.TextViewPlus
        android:id="@+id/aboutmeBaby_tv_gkk"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/textview_height"
        android:layout_marginTop="1dp"
        android:background="@color/normal_textview"
        android:drawableRight="@drawable/school_icon_cookbook"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/textview_start"
        android:paddingRight="@dimen/textview_start"
        android:singleLine="true"
        android:text="公开课"
        android:textColor="@color/et_text_color"
        android:textSize="@dimen/textview_text_size"
       />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                style="@style/MeFrgTextView"
                android:text="宝宝姓名"
                />
        <com.hellobaby.library.widget.TextViewPlus
            android:id="@+id/aboutmeBaby_tv_name"
            style="@style/MeFrgTextViewPlus"
            android:drawableRight="@null"
            android:hint="请输入宝宝姓名"
            myview:right_height="@dimen/textview_icon_size"
            myview:right_width="@dimen/textview_icon_size"
         />
        </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/textview_height"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        android:background="@color/normal_textview">
        <TextView
            android:id="@+id/tv_sex_title"
            android:layout_width="65dp"
            style="@style/MeFrgTextView"
            android:text="性别"
            />
        <com.hellobaby.library.widget.TextViewPlus
            android:id="@+id/aboutmeBaby_tv_sex"
            android:layout_width="match_parent"
            android:layout_toRightOf="@id/tv_sex_title"
            android:layout_toLeftOf="@+id/aboutmeBaby_iv_sex"
            android:layout_height="@dimen/textview_height"
            android:layout_marginTop="1dp"
            android:background="@color/normal_textview"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/textview_start"
            android:singleLine="true"
            android:text="男孩"
            android:textColor="@color/et_text_color"
            android:textSize="@dimen/textview_text_size" />
        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/aboutmeBaby_iv_sex"
            android:layout_width="55dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_height="match_parent"
            android:src="@drawable/et_openicon"
            />
    </RelativeLayout>

        <com.hellobaby.library.widget.TextViewPlus
            android:id="@+id/aboutmeBaby_tv_sex1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/textview_height"
            android:layout_marginTop="1dp"
            android:background="@color/normal_textview"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/textview_start"
            android:paddingRight="@dimen/textview_start"
            android:singleLine="true"
            android:text="男孩"
            android:textColor="@color/et_text_color"
            android:textSize="@dimen/textview_text_size"
            android:visibility="gone"
            myview:right_height="10dp"
            myview:right_width="15dp"/>

        <com.hellobaby.library.widget.TextViewPlus
            android:id="@+id/aboutmeBaby_tv_sex2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/textview_height"
            android:layout_marginTop="1dp"
            android:background="@color/normal_textview"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/textview_start"
            android:paddingRight="@dimen/textview_start"
            android:singleLine="true"
            android:text="女孩"
            android:textColor="@color/et_text_color"
            android:textSize="@dimen/textview_text_size"
            android:visibility="gone"
            myview:right_height="10dp"
            myview:right_width="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">
        <TextView
            style="@style/MeFrgTextView"
            android:text="生日"
            />
        <com.hellobaby.library.widget.TextViewPlus
            android:id="@+id/aboutmeBaby_tv_birthday"
            style="@style/MeFrgTextViewPlus"
            android:hint="请选择出生日期"
            myview:right_height="@dimen/textview_icon_size"
            myview:right_width="@dimen/textview_icon_size"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">
        <TextView
            style="@style/MeFrgTextView"
            android:text="出生地"
            />
        <com.hellobaby.library.widget.TextViewPlus
            android:id="@+id/aboutmeBaby_tv_address"
            style="@style/MeFrgTextViewPlus"
            android:hint="请输入出生地"
            myview:right_height="@dimen/textview_icon_size"
            myview:right_width="@dimen/textview_icon_size"
            />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">
        <TextView
            style="@style/MeFrgTextView"
            android:text="幼儿园"
            />
        <com.hellobaby.library.widget.TextViewPlus
            android:id="@+id/aboutmeBaby_tv_kindergarten"
            style="@style/MeFrgTextViewPlus"
            android:hint="还没有所属幼儿园"
            android:drawableRight="@null"
            myview:right_height="@dimen/textview_icon_size"
            myview:right_width="@dimen/textview_icon_size"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>