<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_base_info_hint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.abings.baby.ui.Information.InfomationChild.BaseInfoHintActivity">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/info_hint_swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/info_hint_info_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>
            <TextView
                android:id="@+id/info_hint_more"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="查看更早的消息..."/>
            <View android:id="@+id/ingo_hint_more_line"
                style="@style/libCommon_divider_line"/>
        </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>


</LinearLayout>
