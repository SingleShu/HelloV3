<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:myview="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/normal_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/pay_success"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/normal_textview"
            android:visibility="gone"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/umeng_socialize_qq"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/textview_height"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/textview_start"
                android:paddingRight="@dimen/textview_start"
                android:textColor="@color/et_text_color"
                android:text="支付成功"
                android:layout_gravity="center"
                android:textSize="24sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/normal_textview"
            android:layout_marginTop="1dp"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/paytext1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/textview_height"
            android:background="@color/normal_textview"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/textview_start"
            android:paddingRight="@dimen/textview_start"
            android:textColor="@color/et_text_color"
            android:text="哈喽宝贝公开课开通订单 5元/月 "
            android:textSize="@dimen/textview_text_size"
            />
            <TextView
                android:id="@+id/paytext2"
                android:gravity="right|center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/textview_height"
                android:paddingRight="@dimen/textview_start"
                android:textColor="@color/text_red"
                android:text=" ￥5.00 "
                android:textSize="@dimen/textview_text_size"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/textview_height"
            android:layout_marginTop="1dp"
            android:background="@color/normal_textview"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/textview_start"
            android:paddingRight="@dimen/textview_start"
            android:textColor="@color/et_text_color"
            android:text="订单号:1234567890"
            android:textSize="@dimen/textview_text_size" />
        <TextView
            android:id="@+id/paytext3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/textview_height"
            android:layout_marginTop="1dp"
            android:background="@color/normal_textview"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/textview_start"
            android:paddingRight="@dimen/textview_start"
            android:textColor="@color/et_text_color"
            android:text="下单时间:2017-3-19 14:00"
            android:textSize="@dimen/textview_text_size"
            android:visibility="gone"/>
        <LinearLayout
            android:id="@+id/pay_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/textview_height"
            android:layout_marginTop="1dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/textview_start"
            android:paddingRight="@dimen/textview_start"
            android:textColor="@color/et_text_color"
            android:text="支付方式"
            android:textSize="@dimen/textview_text_size" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/normal_textview"
            android:layout_marginTop="1dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/textview_height"
                android:layout_height="@dimen/textview_height"
                android:layout_marginLeft="@dimen/textview_start"
                android:src="@drawable/umeng_socialize_wxcircle"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="@dimen/textview_height"
                android:background="@color/normal_textview"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/textview_start"
                android:paddingRight="@dimen/textview_start"
                android:textColor="@color/et_text_color"
                android:text="支付宝"
                android:textSize="@dimen/textview_text_size"
                android:id="@+id/textView3" />

            <ImageView
                android:gravity="right|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/textview_height"
                android:paddingRight="@dimen/textview_start"
                android:textColor="@color/text_red"
                android:src="@drawable/title_tick_green"
                android:textSize="@dimen/textview_text_size"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/normal_textview"
            android:layout_marginTop="1dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/textview_height"
                android:layout_height="@dimen/textview_height"
                android:layout_marginLeft="@dimen/textview_start"
                android:src="@drawable/umeng_socialize_wechat"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="@dimen/textview_height"
                android:background="@color/normal_textview"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/textview_start"
                android:paddingRight="@dimen/textview_start"
                android:textColor="@color/et_text_color"
                android:text="微信支付"
                android:textSize="@dimen/textview_text_size"
                 />

            <ImageView
                android:gravity="right|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/textview_height"
                android:paddingRight="@dimen/textview_start"
                android:textColor="@color/text_red"
                android:src="@drawable/title_tick_green"
                android:textSize="@dimen/textview_text_size"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/normal_textview"
            android:layout_marginTop="1dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/textview_height"
                android:layout_height="@dimen/textview_height"
                android:layout_marginLeft="@dimen/textview_start"
                android:src="@drawable/umeng_socialize_qq"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="@dimen/textview_height"
                android:background="@color/normal_textview"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/textview_start"
                android:paddingRight="@dimen/textview_start"
                android:textColor="@color/et_text_color"
                android:text="QQ钱包"
                android:textSize="@dimen/textview_text_size"
                 />

            <ImageView
                android:gravity="right|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/textview_height"
                android:paddingRight="@dimen/textview_start"
                android:textColor="@color/text_red"
                android:src="@drawable/title_tick_green"
                android:textSize="@dimen/textview_text_size"
                />
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/bt_pay"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/btn_bg_default"
        android:text="确认支付"
        android:textColor="@color/etHintColor"
        />
</RelativeLayout>