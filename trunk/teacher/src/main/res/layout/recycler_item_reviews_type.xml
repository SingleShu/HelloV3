<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/itemReviewsType_ll_root"
              android:layout_width="match_parent"
              android:layout_height="80dp"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <com.abings.baby.teacher.widget.custom.CircleTextView
        android:id="@+id/itemReviewsType_ctv_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/screen_content_lr_space"
        android:gravity="center"
        android:textSize="13sp"
        android:layout_marginRight="23dp"/>

    <TextView
        android:id="@+id/itemReviewsType_tv_complete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:gravity="right"
        android:paddingRight="20dp"
        android:textSize="15sp"
        android:text="已完成"/>
</LinearLayout>
