<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <uk.co.senab.photoview.PhotoView
        android:id="@+id/tp_im"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp"/>

    <include layout="@layout/lib_bottom_time_user"/>


    <RelativeLayout
        android:id="@+id/tpTitle_RL"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/libTitleBg">

        <ImageView
            android:id="@+id/tpTitle_iv_left"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:paddingBottom="@dimen/title_bottom_top_padding"
            android:paddingLeft="@dimen/title_padding"
            android:paddingRight="@dimen/title_padding"
            android:paddingTop="@dimen/title_bottom_top_padding"
            android:src="@drawable/title_left_arrow"/>

        <TextView
            android:id="@+id/tpTitle_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/title_title_size"/>

        <ImageView
            android:id="@+id/tpTitle_iv_right"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:paddingBottom="@dimen/title_bottom_top_padding"
            android:paddingLeft="@dimen/title_padding"
            android:paddingRight="@dimen/title_padding"
            android:paddingTop="@dimen/title_bottom_top_padding"
            android:src="@drawable/del_icon"/>
    </RelativeLayout>
</RelativeLayout>