<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/ask_for_leave_manager"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="35dp">
        <TextView
            android:id="@+id/ask_for_leave_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text="张大仙"/>
        <TextView
            android:id="@+id/ask_for_leave_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="2017.10.10"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="35dp">
        <TextView
            android:id="@+id/ask_for_leave_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:text="事假 "/>
        <TextView
            android:id="@+id/ask_for_leave_start_time"
            android:layout_toRightOf="@+id/ask_for_leave_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:lines="1"
            android:text="(2017.10.11 11:00-"/>
        <TextView
            android:id="@+id/ask_for_leave_end_time"
            android:layout_toRightOf="@+id/ask_for_leave_start_time"
            android:layout_toLeftOf="@+id/right_bottom_fm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:lines="1"
            android:text="2017.10.11 16:00)"/>
        <FrameLayout
            android:id="@+id/right_bottom_fm"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/ask_for_leave_agree"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="3dp"
                    android:gravity="center"
                    android:layout_marginRight="7dp"
                    android:src="@drawable/school_master_agree"
                    />
                <ImageView
                    android:id="@+id/ask_for_leave_disagree"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="3dp"
                    android:gravity="center"
                    android:src="@drawable/school_master_disagree"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/ask_for_result"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已拒绝"/>
        </FrameLayout>
    </RelativeLayout>
    <View style="@style/libCommon_divider_line"/>
</LinearLayout>