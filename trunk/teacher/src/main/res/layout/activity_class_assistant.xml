<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/classAssistant_tv_all"
            style="@style/schoolTitleTv"
            android:paddingLeft="12dp"
            android:gravity="left|center"
            android:text="全部"/>

        <TextView
            android:id="@+id/classAssistant_tv_healthy"
            style="@style/schoolTitleTv"
            android:text="健康"/>

        <TextView
            android:id="@+id/classAssistant_tv_science"
            style="@style/schoolTitleTv"
            android:text="科学"/>

        <TextView
            android:id="@+id/classAssistant_tv_society"
            style="@style/schoolTitleTv"
            android:text="社会"/>

        <TextView
            android:id="@+id/classAssistant_tv_language"
            style="@style/schoolTitleTv"
            android:text="语言"/>
        <TextView
            android:id="@+id/classAssistant_tv_art"
            style="@style/schoolTitleTv"
            android:paddingRight="12dp"
            android:gravity="right|center"
            android:text="艺术"/>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/classAssistant_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>