<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_attendance_school_master"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.abings.baby.teacher.ui.attendanceManager.AttendanceSchoolMasterActivity">

    <RelativeLayout
        android:id="@+id/school_master_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/normal_background">

        <ImageView
            android:id="@+id/school_master_back"
            android:layout_width="@dimen/title_height"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="18dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/title_left_arrow"/>

        <com.flyco.tablayout.CommonTabLayout
            tl:tl_textUnselectColor="#CCCCCC"
            android:id="@+id/school_master_center"
            android:layout_width="150dp"
            android:layout_height="33dp"
            android:background="@drawable/corners_bg"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            tl:tl_iconVisible="false"
            tl:tl_indicator_anim_enable="true"
            tl:tl_indicator_color="#FFFFFF"
            tl:tl_indicator_corner_radius="6dp"
            tl:tl_indicator_margin_bottom="1dp"
            tl:tl_indicator_margin_left="0dp"
            tl:tl_indicator_margin_right="0dp"
            tl:tl_indicator_margin_top="1dp"
            tl:tl_indicator_style="BLOCK"
            tl:tl_textSelectColor="#000000"
            tl:tl_textsize="15sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/school_master_viewpager"
        android:layout_below="@+id/school_master_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>
</RelativeLayout>
